<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>


    <meta name="description" content="Esta es una página de prueba para ver las posibilidades de MVC" />



    @*<script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script src="~/Scripts/i18n/grid.locale-es.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqGrid")


    @*@Scripts.Render("~/bundles/jquery")*@

    @*@Scripts.Render("~/bundles/jqGrid")*@



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="background-color: #7e0c12; color: white;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*<img src="~/images/logo.jpg" width="30" height="30" />*@
                @Html.ActionLink("Facturación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Maestros<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Configuración", "Index", "Configuraciones")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Actividades", "Index", "Actividades")</li>
                            <li>@Html.ActionLink("Articulos", "Index", "Articulos")</li>
                            <li>@Html.ActionLink("Bancos", "Index", "Bancos")</li>
                            @*<li>@Html.ActionLink("Detalles", "Index", "Detalles")</li>*@
                            <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                            <li>@Html.ActionLink("Delegaciones", "Index", "Delegaciones")</li>
                            <li>@Html.ActionLink("Direcciones Entrega", "Index", "DireccionesEntrega")</li>
                            <li>@Html.ActionLink("Familias", "Index", "Familias")</li>
                            <li>@Html.ActionLink("FacturasF", "Index", "FacturaF")</li>
                            <li>@Html.ActionLink("Forma Pago", "Index", "FormasPago")</li>
                            <li>@Html.ActionLink("Iva", "Index", "Ivas")</li>
                            <li>@Html.ActionLink("Obras", "Index", "Obras")</li>
                            <li>@Html.ActionLink("SubActividad", "Index", "SubActividades")</li>
                            <li>@Html.ActionLink("Provincias", "Index", "Provincias")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>

                        </ul>
                    </li>
                    <li>@Html.ActionLink("Facturas", "Index", "Facturas")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container container-fluid body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
            <p>&copy; @DateTime.Now.Year - Aplicación de prueba</p>
        </footer>*@
    </div>


</body>
</html>

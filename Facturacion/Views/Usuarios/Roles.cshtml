@model Facturacion.ModelView.UsuarioViewModel

@{
    ViewBag.Title = "Roles";
}

<h2>Roles del usuario: @Model.Name</h2>

<p>
    @Html.ActionLink("Añadir nuevo Rol", "AddRoles", new { userId = Model.UsuarioId }, new { @class = "btn btn-primary" })
</p>
<p />
<p /><p> </p>
<table class="table  table-striped table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Borar Rol", "DeleteRole", new { user = Model }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("<< Volver", "Index", null, new  { @class= "btn btn-info"})
</div>